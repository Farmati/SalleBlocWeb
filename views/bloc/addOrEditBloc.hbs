
<div class="row">
        <div class="col-md-8 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">

<h3>{{viewTitle}}</h3>

<form action="/bloc" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{bloc._id}}">
    <div class="form-group">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{bloc.name}}">
        <div class="text-danger">
            {{bloc.fullNameError}}</div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/bloc/listBloc"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
</div></div>
