     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
</head>

<div class="row">
        <div class="col-md-8 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">
<h3>{{viewTitle}}</h3>

<form action="/occupation" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{occupation._id}}">
    <div class="form-group">
        <label class="form-label">Date</label>
        <input type="date" class="form-control" name="date" placeholder="Date" value="{{occupation.date}}">
        <div class="text-danger">
            {{ensaj.fullNameError}}</div>
    </div>
 <div class="form-group">
        <label for="salle">Salle : </label>
            <select  class="form-control"  id="salle" name="salle">
                {{#each salle}}
            <option name={{this._id}} value={{this._id}}>{{this.name}}</option>
                {{/each}}
            </select>
    </div>
 <div class="form-group">
        <label for="crenaux">Crenaux : </label>
            <select  class="form-control"  id="crenaux" name="crenaux">
                {{#each crenaux}}
            <option name={{this._id}} value={{this._id}}>{{this.dd}} to {{this.df}}</option>
                {{/each}}
            </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/occupation/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>

</form>
</div></div>
